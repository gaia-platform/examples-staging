#include "gaia/logger.hpp"

ruleset frequent_flyer
{
    {
        lifetime_miles += @flight_miles;
    }

    {
        if (@lifetime_miles > 1000)
        {
            member_level = "silver";
        }
    }

    on_update(flight.flight_status)
    {
        if (strcmp(flight.flight_status, "landed") == 0)
        {
            trip.segments_flown += 1;
        }
    }
}
